/* miniprogram/pages/index/index.wxss */
scroll-view{
  height: 100vh;
}
swiper {
  height: 440rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.tab-list {
  padding: 40rpx 0 60rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item-icon {
  margin: 0 auto 16rpx;
  background: url("https://7072-production-j3smc-1303038162.tcb.qcloud.la/img/brand.png?sign=1d1bedbceac67510c80650821e8a83d3&t=1600178711") center center no-repeat;
  background-size: 46rpx 46rpx;
  background-color: #D32F2F;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 1 1 .5rpx #D32F2F;
}
.item-icon.quality {
  background-image: url("https://7072-production-j3smc-1303038162.tcb.qcloud.la/img/quality.png?sign=fd32409adbc3e9a4510ff38d53dc509a&t=1600178780");
  background-size: 54rpx 54rpx;
}
.item-icon.price {
  background-image: url("https://7072-production-j3smc-1303038162.tcb.qcloud.la/img/price.png?sign=3e633a7ac6d557b298bd314000164399&t=1600179065");
  background-size: 56rpx 56rpx;
}
.item-icon.merchant {
  background-image: url("https://7072-production-j3smc-1303038162.tcb.qcloud.la/img/merchant.png?sign=97766d8b4be40fdb8748237fd851a913&t=1600179051");
}

.item-text{
  font-size: 26rpx;
  text-align: center;
}
.sub-title {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-left {
  display: flex;
  justify-content: space-between;
}
.nav {
  margin-right: 15rpx;
}
.nav, .arrow-right {
  width: 42rpx;
  height: 42rpx;
}
.recommand {
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommand-item {
  width: 48%;
  flex: 0 0 auto;
}
.example-list{
  padding: 0 30rpx 30rpx;
}
.example-item {
  margin: 0 0 30rpx 0;
}
.more {
  width: 260rpx;
  padding: 20rpx 0;
  text-align: center;
  background: #222;
  color: #fff;
  font-size: 26rpx;
  margin: 30rpx auto 80rpx;
  border-radius: 40rpx;
}
.superiority-list{
  padding: 0 30rpx;
}
.superiority-con{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 60rpx;
}
.superiority-con.active{
  flex-direction: row-reverse;
  text-align: right;
}
.superiority-con image{
  width: 42%;
  height: 200rpx;
  border-radius: 30rpx;
}
.superiority-desc{
  width: 42%;
  line-height: 50rpx;
}
.superiority-index{
  font-size: 40rpx;
  font-style: italic;
  font-weight: bold;
  color: #555;
}
.contact {
  padding: 0 40rpx 60rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.contact-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #555;
  margin-bottom: 20rpx;
}
.contact-item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.contact-qr{
  width: 200rpx;
  height: 200rpx;
}