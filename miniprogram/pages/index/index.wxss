/* miniprogram/pages/index/index.wxss */
scroll-view{
  height: 100vh;
}
swiper {
  height: 440rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.tab-list {
  padding: 40rpx 0 60rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item-icon {
  margin: 0 auto 16rpx;
  background: url("data:image/png;base64,") center center no-repeat;
  background-size: 42rpx 42rpx;
  background-color: #D32F2F;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  box-shadow: 1 1 .5rpx #D32F2F;
}
.item-text{
  font-size: 26rpx;
  text-align: center;
}
.sub-title {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-left {
  display: flex;
  justify-content: space-between;
}
.nav {
  margin-right: 15rpx;
}
.nav, .arrow-right {
  width: 42rpx;
  height: 42rpx;
}
.recommend {
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend-item {
  height: 480rpx;
  margin: 0 0 30rpx 0;
  border-radius: 30rpx;
  width: 48%;
  overflow: hidden;
  background: #323232;
}
.recommend-item image {
  width: 100%;
  height: 340rpx;
}
.recommend-desc {
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  text-align: center;
}
.recommend-mark {
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  text-align: center;
  color: #434343;
}
.thr-title {
  display: flex;
  align-items: center;
  justify-content: center;
}
.thr-title image {
  width: 30rpx;
  height: 30rpx;
}
.thr-text {
  margin: 0 20rpx;
  font-size: 38rpx;
}
.thr-mark {
  margin: 10rpx 0 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #434343;
}
.example-list {
  padding: 0 30rpx;
}
.example-item {
  margin: 0 0 30rpx 0;
  border-radius: 30rpx;
  overflow: hidden;
  background: #323232;
  position: relative;
}
.example-image{
  width: 100%;
  height: 380rpx;
}
.example-count {
  position: absolute;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  right: 0;
  top: 300rpx;
  border-radius: 20rpx 0 0 20rpx;
  color: #fff;
  background: rgba(0, 0, 0, .6);
}
.example-con {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 30rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
.example-desc {
  flex: 0 0 420rpx;
}
.example-mark {
  font-size: 24rpx;
  color: #434343;
}
.example-author {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.example-author image {
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.more {
  width: 260rpx;
  padding: 20rpx 0;
  text-align: center;
  background: #222;
  color: #fff;
  font-size: 26rpx;
  margin: 30rpx auto 80rpx;
  border-radius: 40rpx;
}
.superiority-list{
  padding: 0 30rpx;
}
.superiority-con{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 60rpx;
}
.superiority-con.active{
  flex-direction: row-reverse;
  text-align: right;
}
.superiority-con image{
  width: 42%;
  height: 200rpx;
  border-radius: 30rpx;
}
.superiority-desc{
  width: 42%;
  line-height: 50rpx;
}
.superiority-index{
  font-size: 40rpx;
  font-style: italic;
  font-weight: bold;
  color: #555;
}
.contact {
  padding: 0 40rpx 60rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.contact-item {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #555;
  margin-bottom: 20rpx;
}
.contact-item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.contact-qr{
  width: 200rpx;
  height: 200rpx;
}