.username {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 40rpx;
}
.body {
  margin: 40rpx 30rpx;
  padding: 0 20rpx;
  background: #323232;
  border-radius: 20rpx;
}
.list {
  position: relative;
  padding: 0 0rpx 0 60rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #434343;
}
.list:last-of-type {
  border-bottom: none;
}
.contact-btn {
  position: absolute;
  display: block;
  width: 100% !important;
  height: 100% !important;
  left: 0;
  bottom: 0;
  opacity: 0;
}
.arrow-right {
  width: 42rpx;
  height: 42rpx;
}