<view>
  <view wx:if="{{!userInfo}}" class="login">
    <button
      wx:if="{{canIUse && userInfo !== undefined}}"
      class="auth-btn"
      open-type="getUserInfo"
      bindgetuserinfo="bindGetUserInfo">微信一键登陆</button>
  </view>
  <view class="header">
    <open-data class="avatar" type="userAvatarUrl"></open-data>
    <open-data class="username" type="userNickName"></open-data>
  </view>
  <view class="body">
    <view class="list">
      <view>基本信息</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list" data-page="price-search" bindtap="navTo">
      <view>报价查询</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list" data-page="quality-manage" bindtap="navTo">
      <view>质保管理</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list">
      <button class="contact-btn" plain="true" open-type="contact"></button>
      <view>在线客服</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list" data-page="case-manage" bindtap="navTo">
      <view>案例管理</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list">
      <view>用户管理</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list">
      <view>门店管理</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list" data-page="recommand-manage" bindtap="navTo">
      <view>推荐管理</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list" data-page="banner-manage" bindtap="navTo">
      <view>海报管理</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list" data-page="case-check" bindtap="navTo">
      <view>案例审核</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
    <view class="list">
      <view>质保审核</view>
      <image class="arrow-right" src="../../asserts/img/right.png"></image>
    </view>
  </view>
</view>
