.common-item {
  position: relative;
}
swiper {
  height: 380rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.common-count {
  position: absolute;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  right: 0;
  top: 300rpx;
  border-radius: 20rpx 0 0 20rpx;
  color: #fff;
  background: rgba(0, 0, 0, .6);
}
.list-img {
  height: 380rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}
.tips {
  font-size: 32rpx;
  color: #5a5858;
  margin-bottom: 40rpx;
}
.share {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.share .share-item {
  margin: 0;
  font-size: 32rpx;
  width: 310rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx;
  border-radius: 60rpx;
  border: 1rpx solid #999;
  background: transparent;
  color: #eee;
  font-weight: normal;
}
.share image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.title {
  font-size: 40rpx;
  padding: 40rpx 0 20px;
}
.info {
  margin-bottom: 40rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user {
  display: flex;
  font-size: 32rpx;
  text-decoration: underline;
  color: #FF841D;
}
.user .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}
.date {
  font-size: 32rpx;
  color: #999;
}
.desc {
  border-top: 1rpx solid #999;
  padding: 20rpx 0 40rpx;
  font-size: 32rpx;
}