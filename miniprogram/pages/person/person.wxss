.login {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .7);
  display: flex;
  align-items: center;
  z-index: 100;
}
.auth-btn {
  background: #D32F2F;
  border-radius: 14rpx;
  color: #fff;
  font-size: 30rpx;
}
.header {
  padding: 50rpx 0;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0rpx 2rpx 4rpx #A51311;
  background: url("https://7072-production-j3smc-1303038162.tcb.qcloud.la/person.png?sign=147d0bad78685d13011357d6aeef4d34&t=1599138640");
  background-position: center bottom;
  background-size: 100% auto;
}
